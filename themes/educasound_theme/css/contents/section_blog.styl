/*_______ Section Blog _______*/
.articulo
	margin 0 0 4rem
	flex-basis 46%
	border-bottom 1px solid gris_bajao
	padding 0 0 .5rem
	@media (max-width: 768px)
		flex-basis 40%
	@media (max-width: 480px)
		flex-basis 100%

.articulo_thumb
	flex-basis 48%
	margin 0 .5rem 0 0
	@media (max-width: 768px)
		flex-basis 100%
		margin 0 0 1rem

.articulo_data
	text-align left
	flex-basis 48%
	@media (max-width: 768px)
		flex-basis 100%
	.articulo_title
		font-weight 600
		font-size 1.375rem
		line-height 1em
		margin 0 0 .5rem
	.articulo_author
		font-weight 400
		font-style normal
		font-size .875rem
		line-height 1em
		color gris_masclaro
		margin 0 0 .25rem
		a
			font-weight 400
			color primary
			text-decoration none
			&:hover
				color gris_masclaro
	.articulo_date
		display block
		font-weight 400
		font-size .875rem
		line-height 1em
		color gris_masclaro
		margin 0 0 .5rem
	p
		font-weight 100
		font-size .95rem
		line-height 1.15em
		margin 0 0 .5rem
		color gris
	.leermas
		font-weight 400
		font-size .85rem
		text-transform uppercase
		color primary
		&:after
			content ''
			display inline-block
			width .25rem
			height .65rem
			margin 0 0 0 .25rem
			background url(../svg/icon_arrowright_green.svg) no-repeat center