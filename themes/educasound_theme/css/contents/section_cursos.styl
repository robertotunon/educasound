/*_______ Section Cursos _______*/
.cursos
	align-items stretch
	.curso
		position relative
		text-align left
		border 1px solid gris_bajao
		flex-basis 30%
		@media (max-width: 768px)
			flex-basis 48%
		@media (max-width: 640px)
			flex-basis 100%
		.curso_thumb
			max-height 160px
			@media (max-width: 640px)
				max-height 240px
		.curso_data
			padding 1rem 2rem 4rem
			@media (max-width: 640px)
				padding 1rem 1rem 4rem
		.curso_name
			font-weight 600
			font-size 1.75rem
			line-height 1em
			letter-spacing -0.035rem
			margin 0 0 1rem
		p
			font-weight 300
			font-size .95rem
			color gris
			@media (max-width: 640px)
				min-height 0
		.btn
			display block
			font-size 1.125rem
			text-transform uppercase
			text-align center
			color white
			margin 0
			padding .5rem 1.5rem
			background-color primary
			position absolute
			left 1rem
			right 1rem
			bottom 1rem
			&:hover
				background-color light

.page
	text-align left
	&.doscol
		.doscol-header
			background none
			margin 0 0 2rem
			padding 0
		.content
			margin 0 2rem 2rem 0
			flex-basis 55%
			@media (max-width: 800px)
				flex-basis 100%
				margin 0
			.nombrecurso
			font-weight 900
			font-size 1.75rem
			font-style italic
			letter-spacing -.05rem
			line-height .95em
			margin 0
			a
				color primary
		.ficha
			padding 2rem
			box-sizing border-box
			background-color gris_bajao
			flex-basis 40%
			@media (max-width: 800px)
				flex-basis 100%
			.inscripcion
				display block
				width 100%
				font-size 1.25rem
				line-height 1em
				text-transform uppercase
				text-align center
				color white
				margin 2rem 0 0
				padding .75rem 1rem
				border none
				box-sizing border-box
				background-color primary
				cursor pointer