/*_______ Common Elements _______*/
main
	text-align center
	margin 0 auto 6rem
	@media (max-width: 768px)
		margin 0 0 4rem

.site-content
	width 100%
	max-width 960px
	margin 0 auto 6em
	padding 0 2em
	box-sizing border-box

.inner
	max-width 1000px
	margin 0 auto 6rem
	padding 0 2rem
	@media (max-width: 768px)
		margin 0 0 4rem
	&.page
		text-align left
	.content
		margin 0 auto 4rem

.section_header
	padding 2rem 0
	background url(../images/educasound_header-bg.jpg) no-repeat center
	background-position center top
	background-attachment fixed
	margin 0 0 4rem
	.title
		font-weight 600
		font-style italic
		font-size 2.5rem
		text-transform none
		color white
		margin 0

.btn
	display inline-block
	font-size 1.15rem
	text-decoration none
	text-transform uppercase
	text-align center
	padding .25rem 1.25rem
	border 1px solid

.list
	align-items stretch
	.item
		text-align left
		margin 0 0 4rem
		@media (max-width: 640px)
			margin 0 0 2rem
		&.block
			position relative
			border 1px solid gris_bajao
			flex-basis 30%
			@media (max-width: 768px)
				flex-basis 48%
			@media (max-width: 480px)
				flex-basis 100%
			.btn
				display block
				font-size 1.125rem
				text-transform uppercase
				text-align center
				color white
				padding .5rem 1.5rem
				background-color primary
				position absolute
				left 1rem
				right 1rem
				bottom 1rem
				&:hover
					background-color secondary

