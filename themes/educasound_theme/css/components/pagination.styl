/*_______ Pagination _______*/
.pagination
	margin 2em auto
	p
		display inline-block
		vertical-align middle
		margin 0 1em 0 0
	.current
		font-size .95rem
		line-height 1em
		color white
		display inline-block
		margin 0 .15em
		padding .5em .725em
		border 1px solid primary
		background primary
	a
		font-size .95rem
		line-height 1em
		display inline-block
		margin 0 .15em
		padding .5em .725em
		color primary
		border 1px solid primary
		&:hover
			color white
			background primary