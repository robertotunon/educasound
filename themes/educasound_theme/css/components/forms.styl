/*_______ Forms _______*/
input, textarea
	width 100%
	font-size 1rem
	margin .5rem 0 .2rem 0
	padding .5rem
	border 1px solid gris_masclaro
	outline none
input[type="submit"]
	font-size 1rem
	text-transform uppercase
	color white
	padding .75rem 1rem
	background primary
	border none
	transition all .5s ease-out
	&:hover
		background light