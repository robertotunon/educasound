//_____ Modal ______///
#eModal-1
.emodal-title
.emodal-content
	font-family 'Source Sans Pro', sans-serif !important

.emodal-title
	font-style italic
	font-size 1.75rem
	line-height 1em
	margin 0 0 .5rem

.emodal-content
	p
		font-family 'Source Sans Pro', sans-serif !important
		font-size 1rem
		line-height 1.15em
		color gris !important

.modal
	display none
	position fixed
	z-index 10
	left 0
	top 0
	width 100%
	height 100%
	margin 0
	background-color transparentify(negro)

.modal_content
	position absolute
	width 40vw
	height auto
	margin 10% 30%
	padding 2rem
	background-color white
	animation-name modal_up
	animation-duration 0.4s
	overflow auto
	@media (max-width:768px)
		width 50vw
		height 80vh
		margin 5% 25%
	@media (max-width:480px)
		width auto
		height auto
		top 1rem
		bottom 1rem
		left 1rem
		right 1rem
		margin 0
		padding 1.5rem

.close
.emodal-close
	position absolute
	top .5rem
	right .5rem
	width 2rem
	height 2rem
	text-indent -9999px
	padding .5rem
	background url(../svg/icon_close.svg) no-repeat center
	background-size contain
	background-origin content-box
	&:hover
	&:focus
		color black
		text-decoration none
		cursor pointer

@keyframes modal_up {
	from {
		top -300px
		opacity 0
	}
	to {
		top 0
		opacity 1
	}
}


//_____ Lightbox _____//
#openlightbox
	display none
	&:checked + article
		opacity 1
#closelightbox
	display none
	&:checked ~ article
		display none

#opencontactlightbox
	display none
	&:checked + article
		opacity 1
#closecontactlightbox
	display none
	&:checked ~ article
		display none

.close_bg
	animation fade_in .6s ease-out
	position fixed
	width 100%
	height 100%
	text-align right
	color white
	margin 0
	padding 2rem
	box-sizing border-box
	background-color transparentify(negro, 0.7)

.close_btn
	position absolute
	top 1rem
	right 1rem
	width 1rem
	height 1rem
	margin 0
	padding 0
	text-indent 9999px
	overflow hidden
	background url(../svg/icon_close.svg) no-repeat center
	background-size cover
	cursor pointer
	transition all .2s ease-out
	&:hover
		opacity .8

#lightbox
#contactlightbox
	position fixed
	top 0
	bottom 0
	left 0
	right 0
	width 100%
	height 100%
	z-index 25
	transition 5s all ease-out
	.window
		position fixed
		height 78%
		max-width 600px
		top 0
		bottom 0
		left 0
		right 0
		margin auto
		padding 3rem
		background-color white
		box-sizing border-box
		animation window_down .25s ease
		@media (min-height:1300px)
			height 55%
		@media (max-height:1024px)
			overflow auto
		@media (max-height:768px)
			width 95%
			height 95%
			padding 2rem
		header
			text-align left
			margin 0 0 2rem
			padding 0
			@media (max-height:768px)
				margin 0 0 1rem
			.title
				font-size 1.25rem
				line-height 1em
				color gris
				margin 0 0 1rem
				@media (max-height:768px)
					margin 0 0 .5rem
				span
					display block
					font-size 1.75rem
					line-height 1.15em
					text-transform none
				&:after
					display none
			p
				margin 0

.pum-container
