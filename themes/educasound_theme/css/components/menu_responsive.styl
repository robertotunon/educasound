/*_______ Menú respondón _______*/
.responsive_main_nav
	display none
.open_menu
	position absolute
	top 1rem
	right 1rem
	width 2rem
	height 1.5rem
	padding .25rem .5rem
	cursor pointer
	text-indent -9999px
	background url(../svg/icon_menu.svg) no-repeat center
	display none
	@media (max-width: 640px)
		display block

.close_menu
	position absolute
	top 1rem
	right 1rem
	font-size 1.5rem
	line-height 1rem
	padding .25rem .5rem
	cursor pointer
	z-index 10
	opacity 0
	transition opacity .25s ease-out

#menutoggle
	display none
	&:checked + nav
		right 0
	&:checked ~ label
		opacity 1
		transition opacity .25s ease-out .5s