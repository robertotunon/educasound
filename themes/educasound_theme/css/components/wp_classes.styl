/*_______ WP classes _______*/
.gallery-item
	margin 0
	figure
		margin 0
		img
			border none !important
			margin 0
		figcaption
			font-size .75rem
			line-height 1em
			color gris_claro

.gallery-columns-4
	.gallery-item
		width 23% !important
		margin .4em 1%
	
.entry
	position relative
	overflow hidden
  
.alignleft
	float left
	margin 0 0 1em 1em

.alignright
	float right
	margin 0 0 1em 1em

.aligncenter
	display block
	margin-right auto
	margin-left auto


/*_______ Embeded Videos _______*/
.video_container
	position relative
	padding-bottom 56.25%
	margin 0 0 2em 0
	height 0
	overflow hidden
	iframe, object, embed
		position absolute
		top 0
		left 0
		max-width 100%
		width 100%
		height 100%